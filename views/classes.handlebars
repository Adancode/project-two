<!-- All Classes -->
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12">
                <div class="center">
                    <!-- Intro Header -->
                    <img src="/photos/people3.jpg" class="people-jumping-photo" alt="people jumping graphic">
                    <h4 class="comfortaa bold">Browse Our Classes</h4>
                    <div class="row">
                        <div class="col m2"></div>
                        <div class="col s12 m8">
                            <p>Here at classUp, we make it easy for you to learn a new skill, take up a new hobby, and meet new people in your neighborhood. Our diverse classes range from yoga and pasta-making, to graphic design and conversational French. There's always something fun to do on classUp!</p>
                        </div>
                    </div>
                    <!-- Filter Buttons -->
                    <a href="/classes" class="waves-effect waves-light btn-small filter-btn">All</a>
                    <a href="/classes/fitness" id="fitness" class="waves-effect waves-light btn-small filter-btn">Fitness</a>
                    <a href="/classes/art" id="art" class="waves-effect waves-light btn-small filter-btn">Art</a>
                    <a href="/classes/cooking" id="cooking" class="waves-effect waves-light btn-small filter-btn">Cooking</a>
                    <a href="/classes/language" id="language" class="waves-effect waves-light btn-small filter-btn">Language</a>
                    <a href="/classes/kids" id="kids" class="waves-effect waves-light btn-small filter-btn">Kids</a>
                </div>
                <br>
                <div class="row">
                    <!-- Class Card -->
                    {{#each data}}
                    <div class="col s12 m4">
                        <div class="card">
                            <div class="card-image">
                                <img src="{{this.photo}}" alt="class photo">
                            </div>
                            <div class="card-content">
                                <span class="card-title comfortaa">{{this.title}}</span>
                                <p>{{this.description}}</p>
                            </div>
                            <div class="card-action">
                                <a href="/class-details/{{this.id}}">Learn more</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>