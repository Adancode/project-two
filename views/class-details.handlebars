<!-- Featured Classes -->
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 m6 center">
                <img src="{{data.photo}}" class="details-photo">
                <a class="waves-effect waves-light btn-large signup-btn">Sign Up For This Class</a>
            </div>
            <div class="col s12 m6">
                <h3 class="comfortaa bold">{{data.title}}</h3>
                <h6 class="comfortaa">{{data.instructor}}</h6>
                <br>
                <p>{{data.description}}</p>
                <br>
                <h6><span class="comfortaa bold">Date: </span>{{data.date}}</h6>
                <h6><span class="comfortaa bold">Time: </span>{{data.time}}</h6>
                <h6><span class="comfortaa bold">Location: </span>{{data.location}}</h6>
                <h6><span class="comfortaa bold">Spaces Available: </span>{{data.maxStudents}}</h6>
                <h6><span class="comfortaa bold">Price Per Person: </span>{{data.price}}</h6>
            </div>
        </div>
    </div>
</div>