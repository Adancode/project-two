<!-- Class Details -->
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 m6 center">
                <img src="{{data.photo}}" class="details-photo">
                <a class="waves-effect waves-light btn-large signup-btn">Sign Up For This Class</a>
            </div>
            <div class="col s12 m6">
                <h4 class="comfortaa bold">{{data.title}}</h4>
                <h6><span class="comfortaa bold golden-text">Instructor: </span>{{data.instructor}}</h6>
                <hr>
                <p>{{data.description}}</p>
                <hr>
                <h6><span class="comfortaa bold golden-text">Date: </span>{{data.date}}</h6>
                <h6><span class="comfortaa bold golden-text">Time: </span>{{data.starttime}} to {{data.endtime}}</h6>
                <h6><span class="comfortaa bold golden-text">Location: </span>{{data.location}}</h6>
                <h6><span class="comfortaa bold golden-text">Spaces Available: </span>{{data.maxStudents}}</h6>
                <h6><span class="comfortaa bold golden-text">Price Per Person: </span>${{data.price}}</h6>
            </div>
        </div>
    </div>
</div>