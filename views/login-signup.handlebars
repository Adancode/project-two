<!-- Sign Up Form -->
<div id="signup-form" class="container">
    <div class="section">
        <div class="row">
            <div class="row">
                <div class="col s12">
                    <div class="center">
                        <img src="photos/people2.jpg" class="people-jumping-photo">
                        <h4 class="comfortaa bold">Sign Up To Join The Fun!</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col m2"></div>
                <div class="col s12 m8">
                    <div class="input-field">
                        <input id="name-signup" type="text" class="validate">
                        <label for="name-signup">Name</label>
                    </div>
                    <div class="input-field">
                        <input id="phone-signup" type="text" class="validate">
                        <label for="phone-signup">Phone Number</label>
                    </div>
                    <div class="input-field">
                        <input id="email-signup" type="email" class="validate">
                        <label for="email-signup">Email Address</label>
                    </div>
                    <div class="input-field">
                        <input id="password-signup" type="password" class="validate">
                        <label for="password-signup">Password</label>
                    </div>
                    <div class="center">
                        <button id="signup-btn" class="btn waves-effect waves-light btn-large" type="submit" name="action">Create Account</button>
                        <br>
                        <br>
                        <a id="login-here" class="waves-effect waves-teal btn-flat">Log In</a> | <a class="waves-effect waves-teal btn-flat logout-btn">Log Out</a>
                    </div>
                </div>
            </div>   
        </div>
    </div>
</div>

<!-- Log In Form -->
<div id="login-form" class="container">
    <div class="section">
        <div class="row">
            <div class="row">
                <div class="col s12">
                    <div class="center">
                        <img src="photos/people2.jpg" class="people-jumping-photo">
                        <h4 class="comfortaa bold">Log In & Welcome Back!</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col m2"></div>
                <div class="col s12 m8">
                    <div class="input-field">
                        <input id="email-login" type="email" class="validate">
                        <label for="email-login">Email Address</label>
                    </div>
                    <div class="input-field">
                        <input id="password-login" type="password" class="validate">
                        <label for="password-login">Password</label>
                    </div>
                    <div class="center">
                        <button id="login-btn" class="btn waves-effect waves-light btn-large login-btn" type="submit" name="action">Log In</button>
                        <br>
                        <br>
                        <a id="signup-here" class="waves-effect waves-teal btn-flat">Sign Up</a> | <a class="waves-effect waves-teal btn-flat logout-btn">Log Out</a>
                    </div>
                </div>
            </div>   
        </div>
    </div>
</div>